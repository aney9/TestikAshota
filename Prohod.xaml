<Page x:Class="Test.Prohod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Prohod">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Nazv" Grid.Row="0" Grid.Column="1"/>
        <TextBlock x:Name="Opis" Grid.Row="1" Grid.Column="1" />
        <Button x:Name="Otvet1" Grid.Row="2" Grid.Column="1" Click="otvet1"/>
        <Button x:Name="Otvet2" Grid.Row="3" Grid.Column="1" Click="otvet2"/>
        <Button x:Name="Otvet3" Grid.Row="4" Grid.Column="1" Click="otvet3"/>
           
    </Grid>
</Page>
