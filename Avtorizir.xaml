<Window x:Class="Test.Avtorizir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Avtorizir" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Vyhod" Content="Выйти" Click="click1" />
        <Button x:Name="redaktor" Grid.Column="1" Content="Редактор теста" Click="clickred"/>
        <Button x:Name="Proiti" Grid.Column="2" Content="Пройти тест" Click="clickpro"/>
        <Frame x:Name="PageFrame1" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Frame x:Name="PageFrame2" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Frame x:Name="PageFrame3" Grid.ColumnSpan="3" Grid.Row="1"/>
    </Grid>
</Window>
